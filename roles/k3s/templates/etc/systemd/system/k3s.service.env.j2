# K3s Environment Variables
# Generated by arillso.container.k3s role

# K3s specific environment variables
K3S_DATA_DIR={{ k3s_data_dir }}
K3S_CONFIG_FILE={{ k3s_config_dir }}/config.yaml
{% if k3s_token %}
K3S_TOKEN={{ k3s_token }}
{% endif %}

# Custom environment variables
{% for key, value in k3s_environment_vars.items() %}
{{ key }}={{ value }}
{% endfor %}

# Proxy settings (if defined)
{% if k3s_environment_vars.HTTP_PROXY is defined %}
HTTP_PROXY={{ k3s_environment_vars.HTTP_PROXY }}
http_proxy={{ k3s_environment_vars.HTTP_PROXY }}
{% endif %}
{% if k3s_environment_vars.HTTPS_PROXY is defined %}
HTTPS_PROXY={{ k3s_environment_vars.HTTPS_PROXY }}
https_proxy={{ k3s_environment_vars.HTTPS_PROXY }}
{% endif %}
{% if k3s_environment_vars.NO_PROXY is defined %}
NO_PROXY={{ k3s_environment_vars.NO_PROXY }}
no_proxy={{ k3s_environment_vars.NO_PROXY }}
{% endif %}
