# K3s Log Rotation Configuration
# Generated by arillso.container.k3s role

/var/log/k3s.log {
    daily
    rotate 7
    missingok
    notifempty
    compress
    delaycompress
    copytruncate
    maxsize 100M
    create 0640 root adm
}

