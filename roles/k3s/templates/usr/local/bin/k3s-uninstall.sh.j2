{{ '#!/bin/bash' }}
# K3s Uninstall Script
# Generated by arillso.container.k3s role

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}K3s Uninstall Script${NC}"
echo "This script will completely remove K3s from this system."
echo

# Function to print status
print_status() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if running as root
if [[ $EUID -ne 0 ]]; then
   print_error "This script must be run as root (use sudo)"
   exit 1
fi

print_status "Stopping K3s service..."
systemctl stop k3s || true

print_status "Disabling K3s service..."
systemctl disable k3s || true

print_status "Removing K3s systemd service file..."
rm -f /etc/systemd/system/k3s.service

print_status "Reloading systemd daemon..."
systemctl daemon-reload

print_status "Removing K3s binary..."
rm -f /usr/local/bin/k3s

print_status "Running K3s killall script..."
if [ -f "/usr/local/bin/k3s-killall.sh" ]; then
    /usr/local/bin/k3s-killall.sh
else
    print_warning "K3s killall script not found, manual cleanup may be required"
fi

print_status "Removing K3s kubectl symlinks..."
rm -f /usr/local/bin/kubectl
rm -f /usr/local/bin/crictl
rm -f /usr/local/bin/ctr

print_status "Removing K3s scripts..."
rm -f /usr/local/bin/k3s-killall.sh

print_status "Removing this uninstall script..."
rm -f /usr/local/bin/k3s-uninstall.sh

echo
print_status "K3s has been completely uninstalled from this system."
print_warning "System reboot recommended to ensure all components are cleaned up."
echo
